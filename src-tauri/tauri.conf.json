{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm generate",
    "beforeDevCommand": "pnpm nuxt",
    "devPath": "http://localhost:3000",
    "distDir": "../.output/public"
  },
  "package": {
    "productName": "Alfagames Timer",
    "version": "0.1.4"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "path": {
        "all": true
      },
      "fs": {
        "all": false,
        "copyFile": false,
        "createDir": true,
        "exists": false,
        "readDir": true,
        "readFile": false,
        "removeDir": false,
        "removeFile": false,
        "renameFile": false,
        "scope": ["$APPLOCALDATA/**"],
        "writeFile": false
      },
      "http": {
        "all": false,
        "request": true,
        "scope": ["https://btones.b-cdn.net"]
      }
    },
    "bundle": {
      "active": true,
      "category": "Productivity",
      "copyright": "Copyright Â© David Arenas",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.david.alfagames",
      "longDescription": "",
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://gist.githubusercontent.com/Dave136/854901fe48bfb49af64029545a8ec76d/raw"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY2Mzk0RjEwRTg0MTQwNzcKUldSM1FFSG9FRTg1OW9NYW1qS1krNzRTWmZST3VLRjdlMS9ZZGVIM2JIVVp0WVNJN0Jna0piSW0K"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "minHeight": 600,
        "minWidth": 600,
        "resizable": true,
        "title": "Alfagames Timer",
        "width": 800
      }
    ]
  }
}
